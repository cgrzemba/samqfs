<!-- $Id: NFSShareDisplayTable.xml,v 1.5 2008/12/16 00:10:45 am143972 Exp $ -->
<table>
    <actions>
        <cc name="AddButton"
            tagclass="com.sun.web.ui.taglib.html.CCButtonTag">
            <attribute name="defaultValue" value="common.button.add" />
        </cc>
        <cc name="EditButton"
            tagclass="com.sun.web.ui.taglib.html.CCButtonTag">
            <attribute name="dynamic" value="true" />
            <attribute name="disabled" value="true" />
            <attribute name="defaultValue" value="common.button.edit" />
        </cc>

        <cc name="RemoveButton"
            tagclass="com.sun.web.ui.taglib.html.CCButtonTag">
            <attribute name="dynamic" value="true" />
            <attribute name="disabled" value="true" />
            <attribute name="defaultValue" value="common.button.remove" />
            <attribute name="onClick" 
                value="if (!showConfirmMsg(1)) return false;"/>
        </cc>
        
        <cc name="ActionMenu"
            tagclass="com.sun.web.ui.taglib.html.CCDropDownMenuTag">
            <attribute name="dynamic" value="true" />
            <attribute name="commandChild" value="ActionMenuHref"/>
            <attribute name="escape" value="false"/>
            <attribute name="onChange"
                value="var item = getDropDownSelectedItem(this);
                if (item == 2) {
                    if (!showConfirmMsg(2)) {
                        resetDropDownMenu(this);
                        return false;
                    }
	
                } 
            "/>
            <option label="filesystem.nfs.operation.defaultOption"
                value="0" disabled="false" />
            <option label="filesystem.nfs.operation.share"
                value="1" disabled="true" />
            <option label="filesystem.nfs.operation.unshare"
                value="2" disabled="true" />
        </cc>
    </actions>

    <column name="DirNameColumn" extrahtml="nowrap">
        <cc name="DirNameText"
            tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag"/>
    </column>

    <column name="StatusColumn" extrahtml="nowrap='nowrap' align='left'">
        <cc name="StatusImage"
            tagclass="com.sun.web.ui.taglib.html.CCImageTag">
            <attribute name="hspace" value="20" />
        </cc>
    </column>

</table>

  
  

