<propertysheet>
    <section name="Recycler" defaultValue="Recycler.section1">
        <property span="true">
        <label name="recyclerlabel" defaultValue="Recycler.logFile"/>
        <cc name="recyclerlogValue" 
                tagclass="com.sun.web.ui.taglib.html.CCTextFieldTag" >
            <attribute name="size" value="30"/>
            <attribute name="maxLength" value="127" />
        </cc>
        </property>

        <property span="true">
        <label name="postrecyclerlabel" 
                defaultValue="Recycler.postrecyclerlabel"/>
        <cc name="postrecyclerValue" 
                tagclass="com.sun.web.ui.taglib.html.CCRadioButtonTag" >
            <option label="Recycler.postrecycler1" value="relabel"/>
            <option label="Recycler.postrecycler2" value="export"/>
        </cc>
        </property>

        <property span="true">
            <cc name="recyclerTable" 
                    tagclass="com.sun.web.ui.taglib.table.CCActionTableTag" >
                <attribute name="title" value="Recycler.recyclertabletitle" />
                <attribute name="showAdvancedSortIcon" value="false" />
                <attribute name="showPaginationControls" value="false" />
                <attribute name="showLowerActions" value="false" />
                <attribute name="showPaginationIcon" value="false" />
                <attribute name="showSelectionIcons" value="false" />
                <attribute name="showSortingRow" value="false" />
            </cc>
        </property>
    </section>
</propertysheet>
