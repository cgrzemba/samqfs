<table>
<column name="LibraryNameColumn" extrahtml="nowrap">
    <cc name="LibraryNameText"
	tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag"/>
</column>

<column name="LibraryTypeColumn" extrahtml="nowrap">
    <cc name="LibraryTypeText"
        tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag"/>
</column>

<column name="LibraryStateColumn" extrahtml="nowrap">
    <cc name="LibraryStateText"
        tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag"/>
</column>

<column name="LibraryLogColumn" extrahtml="nowrap">
    <cc name="LibraryLogHref" tagclass="com.sun.web.ui.taglib.html.CCHrefTag">
        <attribute name="submitFormData" value="true"/>
        <attribute name="onClick"
            value="
                launchPopup(
                    '/admin/ShowLog',
                    'showconfig',
                    getServerName(),
                    SIZE_LARGE,
                    '&amp;SAMQFS_PATH_NAME=' + getPathFromHref(this));
                return false;
            "/>
        <cc name="LibraryLogText"
            tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag"/>
        <cc name="LogPath"
            tagclass="com.sun.web.ui.taglib.html.CCHiddenTag"/>
    </cc>
</column>

<column name="LibraryStatusColumn">
    <cc name="LibraryStatusText"
        tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag">
        <attribute name="escape" value="false"/>
    </cc>
</column>

<column name="LibraryActivityColumn">
    <cc name="LibraryActivityText"
	tagclass="com.sun.web.ui.taglib.html.CCStaticTextFieldTag">
        <attribute name="escape" value="false"/>
    </cc>
</column>

</table>
